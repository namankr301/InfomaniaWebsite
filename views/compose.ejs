<%- include('partials/header'); -%>
<h1>Compose</h1>



<form class="" action="/compose" method="post" enctype="multipart/form-data">
<div class="form-group">
  <div class="custom-file">
    <input type="file" class="custom-file-input" id="customFile" name="file">
    <label class="custom-file-label" for="customFile">Choose image file...</label>
</div>
<label for="usr">Category</label>
<input type="text" class="form-control" id="usr" name="postCategory" autocomplete="off">
  <label for="usr">Title</label>
  <input type="text" class="form-control" id="usr" name="postTitle" autocomplete="off">
</div>
<div class="form-group">
  <label for="comment">Post</label>
  <textarea class="form-control" rows="5" id="comment" name="postBody"></textarea>
</div>
<button type="submit" class="btn btn-primary">Publish</button>
</form>


<%- include('partials/footer'); -%>
